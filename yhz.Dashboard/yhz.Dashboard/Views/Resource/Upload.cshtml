@{
    Layout = "~/Views/Shared/Portal.cshtml"; ;
}

<div class="col-lg-12">
    
    <div class="row">
        <div class="col-lg-4">
            <div id="listArea" class="panel panel-default">
                <div class="panel-heading">
                    <i class="glyphicon glyphicon-picture"></i> @ResourceRes.image
                </div>
                <div class="panel-body">

                    <div class="row" style="margin-top:5px;">

                        <div class="col-lg-12">
                            <table class="table table-striped table-hover">
                                <thead>
                                    <tr>
                                        <th>
                                            @ResourceRes.file_name
                                        </th>
                                        <th>
                                            @CommonRes.Operation
                                        </th>
                                    </tr>
                                </thead>
                                @{
                                    foreach (var res in yhz.Dashboard.GlobalResources.UserImages)
                                    {
                                        <tr>
                                            <td>@res</td>
                                            <td><a btn btn-primary btn-lg active" role="button" href="#" onclick="deleteImage('@res',this);">@CommonRes.Delete</a></td>
                                        </tr>
                                    }
                                }
                            </table>
                        </div>
                        
                    </div>

                </div>
            </div>

            <div id="editArea" class="panel panel-default" style="margin-top:5px;">
                <div class="panel-heading">
                    <i class="glyphicon glyphicon-eject"></i> @CommonRes.Upload
                </div>
                <div class="panel-body">

                    <div class="row" id="imgfile" style="display:none;margin-top:5px;">

                        <div class="col-lg-10">
                            <div class="input-group" style="width:100%">
                                <input type="file" class="form-control"
                                       multiple="true"
                                       accept="image/gif,image/jpeg,image/png">
                            </div>
                        </div>
                        <div class="col-lg-2">
                            <button type="button" class="btn btn-default"
                                    onclick="removeFile(this);">
                                <i class="glyphicon glyphicon-minus"></i>
                            </button>
                        </div>
                    </div>

                    <form action="/Resource/ImageUpload" class="form-inline" method="post" enctype="multipart/form-data">
                        <button type="submit" class="btn btn-default">
                            <i class="glyphicon glyphicon-upload"></i>
                            @CommonRes.Upload
                        </button>
                        <button type="button" class="btn btn-default"
                                onclick="addImgFile();">
                            <i class="glyphicon glyphicon-plus"></i>
                            @CommonRes.Add
                        </button>
                        <div id="imgfiles">

                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div id="listArea" class="panel panel-default">
                <div class="panel-heading">
                    <i class="glyphicon glyphicon-volume-down"></i> @ResourceRes.audio
                </div>
                <div class="panel-body">

                    <div class="row" style="margin-top:5px;">

                        <div class="col-lg-12">
                            <table class="table table-striped table-hover">
                                <thead>
                                    <tr>
                                        <th>
                                            @ResourceRes.file_name
                                        </th>
                                        <th>
                                            @CommonRes.Operation
                                        </th>
                                    </tr>
                                </thead>
                                @{
                                    foreach (var res in yhz.Dashboard.GlobalResources.UserAudios)
                                    {
                                        <tr>
                                            <td>@res</td>
                                            <td><a btn btn-primary btn-lg active" role="button" href="#" onclick="deleteAudio('@res',this);">@CommonRes.Delete</a></td>
                                        </tr>
                                    }
                                }
                            </table>
                        </div>

                    </div>

                </div>
            </div>

            <div id="editArea" class="panel panel-default">
                <div class="panel-heading">
                    <i class="glyphicon glyphicon-eject"></i> @CommonRes.Upload
                </div>
                <div class="panel-body">

                    <div class="row" id="audiofile" style="display:none;margin-top:5px;">

                        <div class="col-lg-10">
                            <div class="input-group" style="width:100%">
                                <input type="file" class="form-control"
                                       accept="audio/ac3,audio/basic,audio/mpeg,audio/mp4">
                            </div>
                        </div>
                        <div class="col-lg-2">
                            <button type="button" class="btn btn-default"
                                    onclick="removeFile(this);">
                                <i class="glyphicon glyphicon-minus"></i>
                            </button>
                        </div>
                    </div>

                    <form action="/Resource/AudioUpload" class="form-inline" method="post" enctype="multipart/form-data">
                        <button type="submit" class="btn btn-default">
                            <i class="glyphicon glyphicon-upload"></i>
                            @CommonRes.Upload
                        </button>
                        <button type="button" class="btn btn-default"
                                onclick="addAudioFile();">
                            <i class="glyphicon glyphicon-plus"></i>
                            @CommonRes.Add
                        </button>
                        <div id="audiofiles">

                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div id="listArea" class="panel panel-default">
                <div class="panel-heading">
                    <i class="glyphicon glyphicon-facetime-video"></i> @ResourceRes.Video
                </div>
                <div class="panel-body">

                    <div class="row" style="margin-top:5px;">

                        <div class="col-lg-12">
                            <table class="table table-striped table-hover">
                                <thead>
                                    <tr>
                                        <th>
                                            @ResourceRes.file_name
                                        </th>
                                        <th>
                                            @CommonRes.Operation
                                        </th>
                                    </tr>
                                </thead>
                                @{
                                    foreach (var res in yhz.Dashboard.GlobalResources.UserVideos)
                                    {
                                        <tr>
                                            <td>@res</td>
                                            <td><a btn btn-primary btn-lg active" role="button" href="#" onclick="deleteVideo('@res',this);">@CommonRes.Delete</a></td>
                                        </tr>
                                    }
                                }
                            </table>
                        </div>

                    </div>

                </div>
            </div>

            <div id="editArea" class="panel panel-default">
                <div class="panel-heading">
                    <i class="glyphicon glyphicon-eject"></i> @CommonRes.Upload
                </div>
                <div class="panel-body">

                    <div class="row" id="videofile" style="display:none;margin-top:5px;">

                        <div class="col-lg-10">
                            <div class="input-group" style="width:100%">
                                <input type="file" class="form-control"
                                       accept="video/mp4,video/mpeg">
                            </div>
                        </div>
                        <div class="col-lg-2">
                            <button type="button" class="btn btn-default"
                                    onclick="removeFile(this);">
                                <i class="glyphicon glyphicon-minus"></i>
                            </button>
                        </div>
                    </div>

                    <form action="/Resource/VideoUpload" class="form-inline" method="post" enctype="multipart/form-data">
                        <button type="submit" class="btn btn-default">
                            <i class="glyphicon glyphicon-upload"></i>
                            @CommonRes.Upload
                        </button>
                        <button type="button" class="btn btn-default"
                                onclick="addVideoFile();">
                            <i class="glyphicon glyphicon-plus"></i>
                            @CommonRes.Add
                        </button>
                        <div id="videofiles">

                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    

</div>

<script type="text/javascript" src="~/Scripts/views/resource/upload.js"></script>
